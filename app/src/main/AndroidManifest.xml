<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.sin.findrestaurants">

    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <queries>

        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FindRestaurants">
        <activity
            android:name=".ui.view.rating.RatingActivity"
            android:label="@string/title_activity_rating"
            android:theme="@style/Theme.FindRestaurants.NoActionBar"></activity>
        <activity
            android:name=".ui.view.comment.CommentActivity"
            android:label="@string/title_activity_comment"
            android:theme="@style/Theme.FindRestaurants.NoActionBar" />
        <activity
            android:name=".ui.view.ViewActivity"
            android:label="@string/title_activity_view"
            android:theme="@style/Theme.FindRestaurants.NoActionBar" />
        <activity
            android:name=".ui.update.UpdateAcitivty"
            android:label="@string/title_activity_update_acitivty"
            android:theme="@style/Theme.FindRestaurants.NoActionBar" />
        <activity
            android:name=".ui.login.AuthActivity"
            android:label="@string/title_activity_auth" />
        <activity
            android:name=".ui.home.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.FindRestaurants.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>